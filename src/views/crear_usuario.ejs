<main class="container">
    
    <div>
        <form action="" method="POST" class="row my-3 p-2 border-2 g-3">
            
            <h2 class="mb-4">Creación de nuevo usuario:</h2>
            
            <div class="mb-4 col-md-6">
                <label class="form-label">Nombres:</label>
                <input placeholder="Ingrese sus nombres" name="user_first_name" type="text" class="form-control me-2">
            </div>
            
            <div class="mb-4 col-md-6">
                <label class="form-label">Apellidos:</label>
                <input placeholder="Ingrese sus apellidos" name="user_last_name" type="text" class="form-control me-2">
            </div>
            
            <div class="mb-4">
                <label class="form-label">DNI/CE:</label>
                <input placeholder="Ingrese número de DNI/CE" name="user_last_name" type="number" class="form-control me-2">
            </div>

            <div class="mb-4">
                <label for="" class="form-label">Sexo:</label>
                <select class="form-select" id="user_gender">
                    <option selected disabled value="">--Seleccione una opción--</option>
                    <option>Masculino</option>
                    <option>Femenino</option>
                    <option>Otro</option>
                    <option>Prefiero no decirlo</option>
                </select>
            </div>

            <div class="mb-4">
                <label for="" class="form-label">Fecha de nacimiento:</label>
                <input type="date" class="form-control" id="user_birthdate" required>
            </div>

            <div class="mb-4">
                <label class="form-label">Foto:</label>
                <input type="file" class="file form-control" id="" required>
            </div>
            
            <div class="mb-4 col-md-6">
                <label class="form-label">Email:</label>
                <input placeholder="Ingrese su correo electrónico" name="user_last_name" type="email" class="form-control me-2">
            </div>

            <div class="mb-4 col-md-6">
                <label class="form-label">Telefono celular:</label>
                <input placeholder="Ingrese su número de telefono" name="user_last_name" type="number" class="form-control me-2">
            </div>

            <div class="mb-4 ">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="acepto_terminos" required>
                    <label class="form-check-label" for="">Acepto los terminos y condiciones y las leyes de tratamiento de datos personales</label>
                </div>
            </div>

            <div>
                <button class="btn btn-primary" type="submit">Crear Usuario</button>
            </div>

        </form>
    
    </div>
</main>
