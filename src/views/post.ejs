<div class="row">
    <div class="col">
        <img src="data:image/png;base64,<%=post.pet.photo%>" class="img-fluid rounded border border-dark" alt="">
    </div>
    <div class="col-6">
        <div class="row">
            <h1>
                <%=post.pet.name%>
            </h1>
            <p class="lead"><%=post.pet.story%></p>
            <h6>Birthdate:</h6>
            <p><%=post.pet.birthdate%></p>

            <h6>Gender:</h6>
            <p><%=post.pet.gender.name%></p>

            <h6>Gender:</h6>
            <p><%=post.pet.gender.name%></p>

            <h6>Weight:</h6>
            <p><%=post.pet.weight%> <span class="badge bg-<%=post.pet.size.id==1?'success':post.pet.size.id==2?'warning': 'danger'%>"><%=post.pet.size.name%></span></p>

            <h6>Activity level:</h6>
            <p><%=post.pet.activitylevel.name%></p>
        </div>
    </div>
    <div class="col">
        <h5>Posted by:</h5>
        <h2><%=post.user.username%></h2>
        <h6>Location:</h6>
        <div class="row">
            <div class="accordion">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        <%=post.user.location.province%>
                      </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                      <div class="accordion-body">
                        <p><strong>District:</strong> <%=post.user.location.district%></p>
                        <p><strong>Address:</strong> <%=post.user.location.address%></p>
                      </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3 ml-3 mr-3">
            <button class="btn btn-success">Contact</button>
        </div>
    </div>
</div>