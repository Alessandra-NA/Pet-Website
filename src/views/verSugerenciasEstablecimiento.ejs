<h2>Sugerencias para establecimiento con ID: <%= estId %></h2>



<div class="row row-cols-1 row-cols-md-5 g-4 mt-2 mb-4">
  <% sugerencias.forEach(function(sugerencia){ %>
      <div class="col">
          <div class="card">
              <div class="card-body">
                <form action="/accounts/confirmarSugerencia" method="POST">
                  <h4 class="card-title mb-3" style="text-align: center;">Sugerencia <%= sugerencia.id %></h5>

                  <h5> Nombre:</h5>
                  <% if (sugerencia.name == null){ %>
                  <input type="text" placeholder="Nombre no sugerido" disabled>
                  <% } else { %>
                  <input type="text" value="<%=sugerencia.name%>" name="nombreS">
                  <% } %>
                    
                  <h5 class="mt-3">Tipo:</h5>
                  <% if (sugerencia.type == null){ %>
                  <input type="text" placeholder="No sugerido" disabled>
                  <% } else { %>
                    <input type="text" value="<%=sugerencia.type%>" name="tipoS">
                  <% } %>

                  <h5 class="mt-3">Distrito:</h5>
                  <% if (sugerencia.district == null){ %>
                  <input type="text" placeholder="No sugerido" disabled>
                  <% } else { %>
                  <input type="text" value="<%=sugerencia.district%>" name="distritoS">
                  <% } %>

                  <h5 class="mt-3">Direcci√≥n exacta:</h5>
                  <% if (sugerencia.address == null){ %>
                  <input type="text" placeholder="No sugerido" disabled>
                  <% } else { %>
                  <input type="text" value="<%=sugerencia.address%>" name="direccionS">
                  <% } %>

                  <h5 class="mt-3">Link:</h5>
                  <% if (sugerencia.link == null){ %>
                  <input type="text" placeholder="No sugerido" disabled>
                  <% } else { %>
                    <input type="text" value="<%=sugerencia.link%>" name="linkS">
                  <% } %>

                  <h5 class="mt-3">Sugerido por: <%= sugerencia.user.username %> </h5>
                  <h6>Fecha: <%= sugerencia.fecha %></h6>
  
                  <button type="submit" class="btn btn-success mt-3 mb-2">Aceptar sugerencias</button>
                  <button class="btn btn-danger">Eliminar sugerencias</button>

                  <!-- Variables ocultas-->
                  <input type="text" value="<%= estId %>" name="estid" hidden>
                </form>
              </div>
          </div>
      </div>


  <% }) %>

</div>

<script>
  highlightNavbar(4)
</script>