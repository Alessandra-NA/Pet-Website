<h1>Administración de cuentas</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nombre de usuario</th>
      <th scope="col">Tipo</th>
      <th scope="col">Publicaciones</th>
      <th scope="col">Usuario reportado</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(function(user){ %>
      <tr>
        <th scope="row">
          <%=user.id%>
        </th>
        <td>
          <%=user.username%>
        </td>
        <td>
          <%=user.type%>
        </td>
        <td>
          <%=user.posts.length%>
        </td>
        <td>
          <% if (user.flagReportado == true) { %>
            <b><label for="" style="color: red; ">Reportado</label></b>
          <%} else { %>
            <label for="">No reportado</label>
          <% } %>
        </td>
        <td><button data-bs-toggle="modal" data-bs-target="#deleteModal" class="btn btn-primary deleteButton"
            userid="<%=user.id%>" username="<%=user.username%>">Borrar</button></td>
      </tr>
      <% }) %>
  </tbody>
</table>

<div class="modal" id="deleteModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Borrar usuario</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="deleteMessage">
        <p>Modal body text goes here.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" usertoDelete="" class="btn btn-danger" userid="" id="confirmDeleteButton">Borrar</button>
      </div>
    </div>
  </div>
</div>

<div class="modal" id="detailsModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Borrar usuario</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="deleteMessage">
        <p>Modal body text goes here.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" usertoDelete="" class="btn btn-danger" userid="" id="confirmDeleteButton">Borrar</button>
      </div>
    </div>
  </div>
</div>
<script>
  highlightNavbar(3)
  document.querySelectorAll('.deleteButton').forEach((button) => {
    button.addEventListener('click', (ev) => {
      console.log(ev.target);
      document.querySelector('#deleteMessage').innerText = "  Está seguro que desea borrar al usuario " + ev.target.getAttribute('username') + '?';
      document.querySelector('#confirmDeleteButton').setAttribute("userid", ev.target.getAttribute('userid'));
    })
  })
  document.querySelector('#confirmDeleteButton').addEventListener('click', (ev) => window.location = '/accounts/delete/' + ev.target.getAttribute('userid'))
</script>