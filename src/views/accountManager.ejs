<h1>Hello, world!</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Username</th>
            <th scope="col">Type</th>
            <th scope="col">Location ID</th>
            <th scope="col">Posts</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(function(user){ %>
            <tr>
                <th scope="row"><%=user.id%></th>
                <td><%=user.username%></td>
                <td><%=user.type%></td>
                <td><%=user.location_id%></td>
                <td><%=user.posts.length%></td>
                <td><button data-bs-toggle="modal" data-bs-target="#deleteModal" class="btn btn-primary deleteButton" userid="<%=user.id%>" username="<%=user.username%>">Delete</button></td>
            </tr>
        <% }) %>
    </tbody>
</table>

<div class="modal" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Delete user</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" id="deleteMessage">
          <p>Modal body text goes here.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" usertoDelete="" class="btn btn-danger" userid="" id="confirmDeleteButton">Delete</button>
        </div>
      </div>
    </div>
  </div>
<script>
    document.querySelectorAll('.deleteButton').forEach((button) =>{
        button.addEventListener('click',(ev) =>{
            console.log(ev.target);
            document.querySelector('#deleteMessage').innerText = "Are you sure you want to delete user " + ev.target.getAttribute('username') + '?';
            document.querySelector('#confirmDeleteButton').setAttribute("userid", ev.target.getAttribute('userid'));
        })
        })
    document.querySelector('#confirmDeleteButton').addEventListener('click', (ev) => window.location='/accounts/delete/'+ev.target.getAttribute('userid'))
</script>