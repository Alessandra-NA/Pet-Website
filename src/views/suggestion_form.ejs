<div class="container" style="margin-bottom: 2%;">
    <p class="h1">Sugerencias</p>
</div>
<div class="container" style="margin-bottom: 2%;">
    <form class="row g-3" action="/establecimiento_detalle/ds">
        <input hidden type="text" id="id" name="id" value="<%=establecimiento.id%>">
        <div class="col-md-6">
          <label class="form-label">Nombre</label>
          <input type="text" class="form-control" id="name" name="name" value="<%=establecimiento.name%>">
        </div>
        <div class="col-md-6">
          <label class="form-label">Tipo</label>
          <input type="text" class="form-control" id="type" name="type" value="<%=establecimiento.type%>">
        </div>
        <div class="col-12">
          <label class="form-label">Link</label>
          <input type="text" class="form-control" id="link" name="link" value="<%=establecimiento.link%>">
        </div>
        <div class="col-12">
          <label class="form-label">Dirección</label>
          <input type="text" class="form-control" id="address" name="address" value="<%=establecimiento.location.address%>">
        </div>
        <div class="col-md-4">
          <label class="form-label">País</label>
          <input type="text" class="form-control" id="country"  name="country" value="<%=establecimiento.location.country%>">
        </div>
        <div class="col-md-4">
          <label class="form-label">Provincia</label>
          <input type="text" class="form-control" id="province" name="province"value="<%=establecimiento.location.province%>">
        </div>
        <div class="col-md-4">
          <label class="form-label">Distrito</label>
          <input type="text" class="form-control" id="district" name="district" value="<%=establecimiento.location.district%>">
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
    </form>
</div>
